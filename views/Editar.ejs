            <div class="card-header bg-primary text-center text-uppercase"><b>Datos Usuario</b></div>
            <div class="card-body bg-light">
                <form action="/ActualizarUsuarios" method="POST">
                    <div class="mb-0" hidden="true">
                        <label for="IDUsuario" class="form-label">IDUsuario</label>
                        <input value="<%= User.ID_Usuario %>" type="text" id="IDUsuario" name="IDUsuario"></br>
                    </div>
                    <div class="mb-0" style="margin-top: 2%;">
                        <label for="TipoDocu" class="form-label">Tipo De Documento:</label>
                        <select class="form-select" id="TipoDocu" name="TipoDocu">
                            <option selected value="<%= User.Usu_TipoDocumento %>"><%= User.Usu_TipoDocumento %></option>
                            <option value="TI">Tarjeta De Identidad</option>
                            <option value="CC">Cedula De Ciudadania</option>
                            <option value="CE">Cedula De Extranjeria</option>
                            <option value="PAS">Pasaporte</option>
                        </select></br>
                    </div>
                    <div class="mb-0">
                        <label for="Identificacion" class="form-label">Numero De Identificacion: </label>
                        <input class="form-control" type="number" id="Identificacion" name="Identificacion" value="<%= User.Usu_Documento %>"></br>
                    </div>
                    <div class="mb-0">
                        <label for="Nombre" class="form-label">Nombre Completo: </label>
                        <input class="form-control" type="text" id="Nombre" name="Nombre" value="<%= User.Usu_Nombre %>"></br>
                    </div>
                    <div class="mb-0">
                        <label for="Correo" class="form-label">Correo Electronico: </label>
                        <input class="form-control" type="email" id="Correo" name="Correo" value="<%= User.Usu_Correo %>"></br>
                    </div>
                    <div class="mb-0">
                        <label for="Cargo" class="form-label">Cargo: </label>
                        <select class="form-select" id="Cargo" name="Cargo">
                            <option selected value="<%= User.Usu_Cargo %>"><%= User.Usu_Cargo %></option>
                            <option value="Asesor">Asesor</option>
                            <option value="Supervisor">Supervisor</option>
                            <option value="Desarrollador">Administrador</option>
                        </select></br>
                    </div>
                    <div class="mb-0">
                        <label for="Pass" class="form-label">Contrase√±a De Este Usuario: </label>
                        <input class="form-control" type="password" id="Pass" name="Pass" value="<%= User.Usu_Password %>"></br>
                    </div>
                    <div class="mb-0">
                        <label for="Estado" class="form-label">Estado Actual: </label>
                        <select class="form-select" id="Estado" name="Estado">
                            <option selected value="<%= User.Usu_Estado %>"><%= User.Usu_Estado %></option>
                            <option value="InActivo">InActivo</option>
                            <option value="Activo">Activo</option>
                        </select></br>
                    </div>
                    <div class="mb-2">
                        <button type="submit" id="BtnActualizar" class="btn btn-primary"> Actualizar </button>
                        <a href="/" class="btn btn-secondary"> Cancelar </a>
                    </div>
                </form>
